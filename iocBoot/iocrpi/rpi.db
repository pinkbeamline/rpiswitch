record(sub, "$(BL):$(DEV):threads_init")
{
    field(PINI, "YES")
    field(INAM, "startserver")
    field(INPA, "0")
    field(SNAM, "readaddr")
}

record(sub, "$(BL):$(DEV):input1")
{
    field(SCAN, ".1 second")
    field(SNAM, "readaddr")
    field(INPA, "1")
}

record(sub, "$(BL):$(DEV):input2")
{
    field(SCAN, ".1 second")
    field(SNAM, "readaddr")
    field(INPA, "2")
}

record(sub, "$(BL):$(DEV):output1")
{
    field(SNAM, "writeaddr")
    field(INPA, "1")
}

record(sub, "$(BL):$(DEV):output2")
{
    field(SNAM, "writeaddr")
    field(INPA, "2")
}

